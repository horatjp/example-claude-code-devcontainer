{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--no-sandbox",
        "--isolated",
        "--browser",
        "chromium",
        "--executable-path",
        "/usr/bin/chromium"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "@upstash/context7-mcp@latest"
      ]
    }
  }
}
